---
import "@/styles/globals.css";
import { ModeToggle } from "@/components/ModeToggle";
import Nav from "./Nav";
import MobileNav from "./MobileNav";
import { Button } from "./ui/button";
const { pageTitle } = Astro.props;
---

<header class="w-full border-b">
