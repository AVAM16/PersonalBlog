---
import '@/styles/globals.css'
import MainLayout from './MainLayout.astro';
const { frontmatter } = Astro.props;
---
<MainLayout pageTitle={frontmatter.title}>
	<h1 class="text-center scroll-m-20 text-4xl tracking-tight sm:text-5xl mb-4 mt-1">
		{frontmatter.title}
	</h1>
	<p class="text-center text-lg sm:text-xl text-gray-500 mb-10">
		{new Date(frontmatter.pubDate).toLocaleDateString("en-US", {
			year: "numeric",
			month: "long",
			day: "numeric",
		  })}
	</p>
	<div class="prose dark:prose-invert prose-sm sm:prose-base mx-auto px-2 pb-6">
		<slot />
	</div>
</MainLayout>

